<%- include("partials/header") %>
<div class="container">
	<nav aria-label="breadcrumb">
	 <ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="/">Homepage</a></li>
		<li class="breadcrumb-item"><a href="/opportunities">My Opportunities</a></li>
		<li class="breadcrumb-item" active>New Opportunity</li>
	  </ol>
  </nav>
	<h1 style="text-align: center;">Add New Opportunity</h1>
	<div class="row">
		<div style="width: 30%; margin: 0 auto;">
			<form action="/opportunities" method="POST">
			
			<div class="form-group">
				<label><strong>School Location:</strong></label>
				<input type="text" name="school[location]" placeholder="location" required>
			</div>
			
			
			<div class="form-group">
				<label><strong>Outreach Location:</strong></label>
				<input class="form-control" type="text" name="school[outreachLocations]" placeholder="Outreach Locations">
			</div>
			
			
			<div class="form-group">$~
				<label><strong>Tuition Total Cost:</strong></label>
				<input class="form-control" type="number" name="school[cost]" placeholder="Cost" min="1000.0" step="100.0" required>
			</div>
			
			<div class="form-group">
				<label><strong>School Start Date(s):</strong></label>
				<input class="form-control" type="text" name="school[startDate]" placeholder="Start Date(s)">
			</div>
			
			
			<div class="form-group">
				<label><strong>School Website (Optional):</strong></label>
				<input class="form-control" type="text" name="school[website]" placeholder="If none, please leave blank">
			</div>
			
			
			<div class="form-group">
				<label><strong>Facebook Page (Optional):</strong></label>
				<input class="form-control" type="text" name="school[FBPage]" placeholder="If none, please leave blank">
			</div>
			
			
			<div class="form-group">
				<label><strong>Youtube Channel (Optional):</strong></label>
				<input class="form-control" type="text" name="school[youtubeChannel]" placeholder="If none, please leave blank">
			</div>
			
			
			<div class="form-group">
				<label><strong>Additional Notes (Optional):</strong></label>
				<input class="form-control" type="text" name="school[additionalNotes]" placeholder="Ex: This DTS already started.">
			</div>
			
			<button class="btn btn-md btn-primary">Submit</button>
			<a href="/opportunities">Cancel</a>
		</form>
		</div>
	</div>	
</div>
		
		
<%- include("partials/footer") %>