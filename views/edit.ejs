<%- include("partials/header") %>
<div class="container">
	<nav aria-label="breadcrumb">
	 <ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="/">Homepage</a></li>
		<li class="breadcrumb-item"><a href="/opportunities">My Opportunities</a></li>
		<li class="breadcrumb-item" active>Edit <%=school.location%> Details</li>
	  </ol>
  </nav>
	<h1 style="text-align: center;">Edit details for "<%=school.location%>"</h1>
	<div class="row">
		<div style="width: 30%; margin: 0 auto;">
			<form action="/opportunities/<%=school._id%>?_method=PUT" method="POST">
			
			<div class="form-group">
				<label><strong>School Location:</strong></label>
				<input type="text" name="school[location]" value="<%=school.location%>" required>
			</div>
			
			
			<div class="form-group">
				<label><strong>Outreach Location:</strong></label>
				<input class="form-control" type="text" name="school[outreachLocations]" value="<%=school.outreachLocations%>">
			</div>
			
			
			<div class="form-group">$~
				<label><strong>Tuition Total Cost:</strong></label>
				<input class="form-control" type="number" name="school[cost]" value="<%=school.cost%>" min="1000.0" step="100.0" required>
			</div>
			
			<div class="form-group">
				<label><strong>School Start Date(s):</strong></label>
				<input class="form-control" type="text" name="school[startDate]" value="<%=school.startDate%>">
			</div>
			
			
			<div class="form-group">
				<label><strong>School Website (Optional):</strong></label>
				<input class="form-control" type="text" name="school[website]" value="<%=school.website%>">
			</div>
			
			
			<div class="form-group">
				<label><strong>Facebook Page (Optional):</strong></label>
				<input class="form-control" type="text" name="school[FBPage]" value="<%=school.FBPage%>">
			</div>
			
			
			<div class="form-group">
				<label><strong>Youtube Channel (Optional):</strong></label>
				<input class="form-control" type="text" name="school[youtubeChannel]" value="<%=school.youtubeChannel%>">
			</div>
			
			
			<div class="form-group">
				<label><strong>Thoughts and Additional Notes (Optional):</strong></label>
				<textarea class="form-control" name="school[additionalNotes]"><%=school.additionalNotes%></textarea>
				<!-- <input class="form-control" type="text" name="school[additionalNotes]" value=""> -->
			</div>
			
			<button class="btn btn-md btn-warning">Edit and Save</button>
			<a href="/opportunities/<%=school._id%>">Cancel</a>
		</form>
		</div>
	</div>	
</div>
		
		
<%- include("partials/footer") %>